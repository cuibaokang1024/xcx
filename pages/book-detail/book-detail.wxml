<wxs src="../../util/filter.wxs" module="util" />
<view class="container">
    <view class="head">
        <image class="" src="{{book.images.large}}"></image>
        <text class="title">{{book.title}}</text>
        <text class="title">{{book.author}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">短评</text>
        <view class="comment-container">
            <block wx:for="{{util.limit(comments, 3)}}" wx:key="">
                <v-tag tag-class="{{index==0? 'ex-tag1' : '' || index==1? 'ex-tag2' : '' }}" text="{{item.content}}">
                    <text slot="after" class="num">{{'+'+item.nums}}</text>
                </v-tag>
            </block>
        </view>
    </view>
    <view class="sub-container">
        <text class="headline">内容简介</text>
        <text decode="{{true}}" class="content">{{util.format(book.summary)}}</text>
    </view>
    <view class="sub-container">
        <text class="headline">书本信息</text>
        <view class="detail-container">
            <view class="vertical description">
               <text>出版社</text> 
               <text>出版年</text> 
               <text>页数</text> 
               <text>定价</text> 
               <text>装帧</text> 
            </view>
            <view class="vertical">
                <text>{{book.publisher}}</text> 
                <text>{{book.pubdate}}</text> 
                <text>{{book.pages}}</text> 
                <text>{{book.price}}</text> 
                <text>{{book.binding}}</text> 
            </view>
        </view>
    </view>
    <view class="post-container">
        <view class="post-fake">
            <text>输入短评</text>
        </view>
        <view class="like-container">
            <v-like bind:like="onLike" class="like" like="{{likeStatus}}" count="{{likeCount}}"></v-like>
        </view>
    </view>
</view>